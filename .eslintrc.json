{
  "env": {
    "es2021": true,
    "node": true,
    "jest": true
  },
  "extends": [
    "eslint:recommended",
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": "warn",
    "semi": [
      "error",
      "always"
    ],
    "quotes": [
      "warn",
      "double"
    ],
    "indent": [
      "error",
      2
    ]
  }
}