{
  "name": "support-api",
  "version": "1.0.0",
  "description": "API REST Node.js + MongoDB pour gestion des RequestTypes (évaluation Git & CI/CD)",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "NODE_ENV=test jest --runInBand --coverage",
    "prepare": "husky install",
    "e2e": "playwright test || echo 'E2E désactivés (scaffold présent)'"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "express": "^5.1.0",
    "mongoose": "^8.6.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.0",
    "@playwright/test": "^1.48.2",
    "eslint": "^9.8.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-node": "^11.1.0",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^16.2.6",
    "nodemon": "^3.1.10",
    "prettier": "^3.4.2",
    "supertest": "^7.1.1"
  },
  "lint-staged": {
    "src/**/*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "tests/**/*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
